<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiziActivity">

    <ScrollView
        android:id="@+id/scrollview_gizi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_1_gizi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_profile_gizi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/biruGIZI"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/iv_profile_gizi"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:src="@drawable/profile" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_judul_gizi"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/biruGIZI"
                        app:cardCornerRadius="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/plusjakarta"
                            android:text="@string/gizi"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_kembali_gizi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="@color/biruGIZI"
                        android:drawable="@drawable/kembali"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/iv_kembaliBack"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/kembaliback" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_2_gizi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gizi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F5F1F1"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/lampu_tahukahkamu_gizi"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/lampu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:fontFamily="casual"
                                    android:shadowColor="@color/abuCARDVIEW"
                                    android:shadowDx="4"
                                    android:shadowDy="4"
                                    android:shadowRadius="1"
                                    android:text="@string/tahukah_kamu"
                                    android:textColor="@color/kuningTAHUKAH"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="@string/teks_gizi"
                                android:textColor="@color/biruGIZI"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_4_gizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/aktivitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/textview_aktivitas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/plusjakarta"
                            android:text="@string/aktivitas"
                            android:textColor="@color/biruGIZI"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_aktivitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp">

                        <RadioGroup
                            android:id="@+id/radiogroup_aktivitas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:checkedButton="@id/istirahat"
                            android:contextClickable="@+id/istirahat">

                            <RadioButton
                                android:id="@+id/istirahat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:textColor="@color/biruGIZI"
                                android:gravity="center_vertical"
                                android:text="Istirahat"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/ringan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:gravity="center_vertical"
                                android:textColor="@color/biruGIZI"
                                android:text="Ringan"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/sedang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:gravity="center_vertical"
                                android:text="Sedang"
                                android:textColor="@color/biruGIZI"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/berat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:gravity="center_vertical"
                                android:text="Berat"
                                android:textColor="@color/biruGIZI"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/sangatberat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakarta"
                                android:gravity="center_vertical"
                                android:text="Sangat Berat"
                                android:textColor="@color/biruGIZI"
                                android:textSize="17sp" />
                        </RadioGroup>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_3_gizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tinggibadan_gizi"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/tinggi_badan"
                        android:textColorHint="@color/biruGIZI"
                        app:boxStrokeColor="@color/biruGIZI"
                        app:counterTextColor="@color/biruGIZI"
                        app:startIconDrawable="@drawable/tinggi"
                        app:startIconTint="@color/biruGIZI">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tinggibadan_gizi_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/beratbadan_gizi"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/berat_badan"
                        android:textColorHint="@color/biruGIZI"
                        app:boxStrokeColor="@color/biruGIZI"
                        app:counterTextColor="@color/biruGIZI"
                        app:startIconDrawable="@drawable/berat"
                        app:startIconTint="@color/biruGIZI">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/beratbadan_gizi_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/usia_gizi"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp"
                        android:textColorHint="@color/biruGIZI"
                        app:startIconTint="@color/biruGIZI"
                        app:boxStrokeColor="@color/biruGIZI"
                        app:hintTextColor="@color/biruGIZI"
                        app:startIconDrawable="@drawable/arrow">

                        <AutoCompleteTextView
                            android:id="@+id/usiaAnak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="@string/usia_anak" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/button_hitunggizi"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/biruGIZI"
                        android:fontFamily="@font/plusjakarta"
                        android:text="@string/hitung"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_hasilgizi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hasilgizi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/totalgizi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textview_energibasal"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/keterangan_reeGIZI"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_energitotal"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/keterangan_reeGIZI"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>