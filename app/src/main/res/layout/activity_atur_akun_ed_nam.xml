<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AturAkun_EdNamActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_kembali"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/biruMENU"
        android:layout_marginTop="29dp"
        app:layout_goneMarginStart="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawable="@drawable/kembali"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/iv_kembaliBack"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/kembaliback" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ly_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cv_kembali"
        android:orientation="vertical">

        <ImageView
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:src="@drawable/profile"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abuCARDVIEW"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Ganti Foto"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/plusjakarta"
                    android:textColor="@color/biruMENU"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_editNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/datapasien2"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="9dp"
        app:layout_constraintTop_toBottomOf="@+id/ly_profile">

        <TextView
            android:id="@+id/tv_editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pak Tua"
            android:gravity="center"
            android:fontFamily="@font/plusjakarta"
            android:textStyle="bold"
            android:textColor="@color/biruMENU"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
    android:id="@+id/btn_simpan"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="Simpan"
    android:textSize="12sp"
    android:textStyle="bold"
    android:fontFamily="@font/plusjakarta"
    app:layout_constraintTop_toBottomOf="@+id/ly_editNama"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>