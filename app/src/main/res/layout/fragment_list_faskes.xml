<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListFaskesFragment">

    <LinearLayout
        android:id="@+id/lin_listfaskes1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile_gizi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/biruMENU"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_profile_gizi"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_judul_listfaskes1"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/biruMENU"
            android:orientation="vertical"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/plusjakarta"
                android:text="@string/faskes_tersedia"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/biruMENU"
            android:drawable="@drawable/kembali"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/iv_kembaliBack"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/kembaliback"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <ImageView
        android:id="@+id/rumahsakit"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:src="@drawable/listfaskes1"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_listfaskes1"/>

    <ImageView
        android:id="@+id/puskesmas"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:src="@drawable/listfaskes2"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rumahsakit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:src="@drawable/listfaskes3"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puskesmas"/>



</androidx.constraintlayout.widget.ConstraintLayout>